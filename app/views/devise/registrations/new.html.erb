<div class="container">
  <h2>Sign up</h2>

  <div class="col-md-6">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="spacing form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control', placeholder: "Enter your user name here" %>
    </div>

    <div class="spacing form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Enter your email here" %>
    </div>

    <div class="spacing form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Enter your password here" %>
    </div>

    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Enter your password confirmation here" %>
    </div>

    <div class="spacing"><%= f.submit "Sign up", class: 'btn btn-success' %></div>
  <% end %>

  </div>
</div>