<div class="container">

  <div class="spacing">
    <h3><u><b>My tasks!</b></u></h3>
  </div>

  <div class="spacing">
    <%= render partial: '/tasks/new', locals: { task: @newtask } %>
  </div>

  <div class="doublespacing">
    <h4><u>My incomplete tasks</u></h4>
  </div>

  <div class="doublespacing">
    <table class="table table-hover table-bordered table-condensed table-responsive small">
      <tr>
        <td> Task Name </td>
        <td align="center"> Days Left </td>
        <td colspan="2" align="center"> Task Controls </td>
      </tr>
      
      <% @tasks.each do |task| %>
        <% if task.complete == false %>
          <tr>
            <td><%= link_to task.name, edit_task_path(task) %></td>
            <td align="center"> <%= task.days_left %> </td>
            <td align="center"> <%= link_to "Completed?", complete_task_path(task), controller: 'tasks_controller', action: 'complete', method: :post, class: 'btn btn-success' %>  </td>
            <td align="center"> <%= link_to "Delete", task, method: :delete, class: 'btn btn-danger', data: {confirm: 'Delete task?'} %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>

  <div class="doublespacing">
    <h4><u>My completed tasks</u></h4>
  </div>

  <div class="doublespacing">
    <table class="table table-hover table-bordered table-condensed table-responsive small">
      <tr>
        <td> Task Name </td>
        <td colspan="2" align="center"> Task Controls </td>
      </tr>

      <% @tasks.each do |task| %>
        <% if task.complete == true %>
          <tr>
            <td><%= link_to task.name, edit_task_path(task) %></td>
            <td align="center"> <%= link_to "Incomplete?", incomplete_task_path(task), controller: 'tasks_controller', action: 'incomplete', method: :post, class: 'btn btn-warning' %></td>
            <td align="center"> <%= link_to "Delete", task, method: :delete, class: 'btn btn-danger', data: {confirm: 'Delete task?'} %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>