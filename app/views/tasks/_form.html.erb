<div id="form_task_container">
  <%= form_for task, remote: true do |f| %>
    <%= f.label :name, "Task name:" %>
    <%= f.text_field :name, class: 'form-group' %>
    <%= f.submit "Save", class: 'btn btn-success' %>
      <%= link_to "Go back", "#", class: 'btn btn-info', id: 'go_back' %>
  <% end %>

</div>